# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                                                                               controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                                                                                   controllers.Assets.at(path="/public", file)

GET    /scrapper/update                                                                                                 controllers.Debugger.Status()
GET    /status                                                                                                          controllers.Debugger.Status()


#Zona de Matches
GET     /baseballapi/v1/competitions/list                                                                               controllers.MatchController.getActiveCompetitions()
GET     /baseballapi/v1/matches/competition/date/grouped/:idLeague                                                      controllers.MatchController.getFixturesForCompetitionGroupByDateNoPhase(idLeague: Long)

GET     /baseballapi/v1/team/competition/all/:idLeague                                                                  controllers.TeamsController.getTeams(idLeague: Long)
#GET            /baseballapi/v1/matches/mam/:idCompetition/:idMatch                                      controllers.MatchController.getMinuteToMinuteForCompetition(idCompetition: Integer, idMatch : Long, idEvent: Long?=0, forward: Boolean?=false)
#GET            /baseballapi/v1/matches/mam/next/:idCompetition/:idMatch/:idEvent                        controllers.MatchController.getMinuteToMinuteForCompetition(idCompetition: Integer, idMatch : Long, idEvent: Long, forward: Boolean?=true)
#GET            /baseballapi/v1/matches/mam/previous/:idCompetition/:idMatch/:idEvent                    controllers.MatchController.getMinuteToMinuteForCompetition(idCompetition: Integer, idMatch : Long, idEvent: Long, forward: Boolean?=false)
#

GET     /baseballapi/v2/match/:idGameMatch                                                                              controllers.MatchController.getFixturesByID(idGameMatch : Integer)
GET     /baseballapi/v2/teams/:idTeam                                                                                   controllers.TeamsController.getTeamsGt(idTeam: Long)
GET     /baseballapi/v1/competitions/ranking/:idCompetition                                                             controllers.RankController.getRankingsForPhase(idCompetition: Integer)

GET     /baseballapi/v1/matches/date/paged/:date                                                                 controllers.MatchController.getFixturesDatePaged(date : String, pageSize: Integer?=0, page: Integer?=0, timezoneName : String ?= "")

#GET            /footballapi/v1/matches/date/paged/:idApp/:idLanguage/:date                                             controllers.MatchController.getFixturesDatePaged(idApp: Integer, idLanguage : Integer, date : String, pageSize: Integer?=0, page: Integer?=0, timezoneName : String ?= "")