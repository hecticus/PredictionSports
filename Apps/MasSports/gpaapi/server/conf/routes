# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET    /                           controllers.Application.index
GET     /                           controllers.WapSite.index
POST    /getpin                     controllers.WapSite.getpin
POST    /confirm                    controllers.WapSite.confirm
GET     /externalconfirm            controllers.WapSite.confirmExternal
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

POST    /client/getPin               controllers.Register.GetPin()
POST    /client/getpin               controllers.Register.GetPin()
POST    /client/confirm              controllers.Register.confirmPin()
GET     /header                      controllers.Register.CheckHeader()
GET     /pal/config                  controllers.Register.Config
GET     /pal/test                    controllers.Register.Test

#GET     /user/findByEmail/:email    controllers.Users.findByEmail(email: String)
