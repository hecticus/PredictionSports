# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET    /                            controllers.Application.index
GET     /                            controllers.WapSite.index
POST    /getpin                      controllers.WapSite.getpin
GET     /tyc                         controllers.WapSite.tyc
POST    /confirm                     controllers.WapSite.confirm
GET     /externalconfirm             controllers.WapSite.confirmExternal

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.at(path="/public", file)

POST    /clienteExterno/getPin               controllers.RegisterController.GetPin()
POST    /clienteExterno/getpin               controllers.RegisterController.GetPin()
POST    /clienteExterno/confirm              controllers.RegisterController.confirmPin()
GET     /header                      controllers.RegisterController.CheckHeader()
GET     /pal/config                  controllers.RegisterController.Config
GET     /pal/test                    controllers.RegisterController.Test

GET     /promotion                   controllers.PromocionesController.CheckPromotion
GET     /login-render                controllers.RenderLoginController.GetLogin
GET     /manhattan/confirmurl        controllers.ManhattanController.CheckPromotion

GET     /extapi/login-form           controllers.AppLandController.Login
GET     /extapi/tyc                  controllers.AppLandController.TYC
GET     /extapi/check-user           controllers.AppLandController.checkUser
POST    /extapi/login                controllers.AppLandController.LoginPost
GET     /extapi/recover-password     controllers.AppLandController.RecoverPassword
GET     /extapi/login                  controllers.AppLandController.Sms
GET     /extapi/get-status/subscription/:service/:msisdn           controllers.AppLandController.GetStatus(service: String,msisdn: String)
GET     /extapi/check-users-disables        controllers.AppLandController.GetDisabledAppLandClients
GET     /extapi/internal-status/:msisdn/:status           controllers.AppLandController.SendStatus(msisdn: String, status: Integer)

GET     /cj/login                   controllers.CiudadJuegoApplandController.Login
GET     /cj/tyc                     controllers.CiudadJuegoApplandController.TYC
GET     /cj/check-user              controllers.CiudadJuegoApplandController.checkUser
POST    /cj/login                   controllers.CiudadJuegoApplandController.LoginPost
GET     /cj/recover-password        controllers.CiudadJuegoApplandController.RecoverPassword
GET     /cj/sms                     controllers.CiudadJuegoApplandController.Sms
GET     /cj/get-status/subscription/:service/:msisdn           controllers.CiudadJuegoApplandController.GetStatus(service: String,msisdn: String)
GET     /cj/check-users-disables        controllers.CiudadJuegoApplandController.GetDisabledAppLandClients
GET     /cj_back/:id/:reg/:msisdn    controllers.CiudadJuegoApplandController.RedirectFromDigitel(id: String, reg: String, msisdn: String)
